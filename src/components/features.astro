---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Smart Itinerary Generator",
    description:
      "Instantly create personalized, optimized travel itineraries for your clients.",
    icon: "bx:bxs-map",
  },
  {
    title: "AI-Powered Client CRM",
    description:
      "Get real-time and hyper-personalized recommendations for clients based on their history and preferences",
    icon: "bx:bxs-bolt",
  },
  {
    title: "Automated Client Communication",
    description:
      "Automatically send timely reminders and updates to your clients.",
    icon: "bx:bxs-message-dots",
  },
];


---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Discover more
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Unlock beta access to our world class, AI-powered, travel operating system.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
